<div class="container mt-5">
  <h1 class="mb-4">Property Maintenance Job Requests</h1>
  <%= link_to 'New Apartment + ', new_category_path, class: 'btn btn-primary mb-4' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Apartment</th>
        <th scope="col">Description</th>
        <th scope="col">Maintenance Job Request</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td><%= link_to 'Show', category, class: 'btn btn-success mr-1' %>
 </td>
          <td class="btn-group" role="group" aria-label="Basic mixed styles example">
         
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning mr-1' %>
            <%= button_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mr-1' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<br>

<div class="container mt-3">
  <div class="text-center">
    <h2 class="mb-4">Today's Scheduled Tasks</h2>
  </div>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Scheduled Date</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @todays_tasks.each do |task| %>
          <tr>
            <td style="<%= task.completed ? 'text-decoration: line-through;' : '' %>"><%= task.title %></td>
            <td><%= task.category.name %></td>
            <td><%= task.scheduled_date %></td>
            <td>
              <%= link_to 'Edit', edit_category_task_path(task.category, task), class: 'btn btn-warning btn-sm mr-1' %>
              <%= button_to 'Delete', category_task_path(task.category, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>






